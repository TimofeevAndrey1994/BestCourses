<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="best_courses_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textColorHint">@color/white_with_opacity</item>
    </style>

    <style name="green_tv" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RoundedImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="VkImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/rounded_button_vk</item>
    </style>

    <style name="OkImageButton" parent="RoundedImageButton">
        <item name="android:background">@drawable/rounded_button_ok</item>
    </style>
</resources>